{
  "name": "dalian",
  "version": "0.4.2",
  "description": "A lightweight, minimalistic charting library",
  "author": {
    "name": "Enys Mones",
    "email": "enys.mones@gmail.com",
    "url": "enysmones.com"
  },
  "homepage": "https://www.npmjs.com/package/dalian",
  "main": "dist/dalian.min.js",
  "module": "src/index.js",
  "license": "MIT",
  "dependencies": {
    "d3": "^5.15.0",
    "d3-interpolate-path": "^2.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint-config-standard": "^14.1.1",
    "istanbul": "^0.4.5",
    "jsdom": "^16.4.0",
    "mocha": "^8.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.3",
    "node-sass": "^4.14.1",
    "nyc": "^15.1.0",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "rollup": "^2.9.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-gzip": "^2.5.0",
    "standard": "^14.3.3"
  },
  "scripts": {
    "coverage": "cross-env NODE_ENV=test nyc --reporter=text --reporter=html _mocha --recursive --require babel-core/register",
    "build:docs": "cd docs; npm run build; cd ..",
    "build": "./node_modules/.bin/rollup -c; cp dist/* docs/dl/",
    "standard": "./node_modules/.bin/standard --fix src/**/*.js",
    "test": "./node_modules/.bin/mocha --recursive --require babel-core/register"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "include": [
      "src/**/*.js"
    ],
    "sourceMap": false,
    "instrument": false,
    "require": [
      "babel-register"
    ]
  }
}
